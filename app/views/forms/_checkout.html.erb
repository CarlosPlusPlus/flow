<%= form_tag('/iframe', remote: true) do %>

  <h3>Customer Information</h3>
  <input name="customer[fname]" placeholder="First Name" required />
  <input name="customer[lname]" placeholder="Last Name" required />
  <input name="customer[email]" placeholder="Email" required />

  <br>

  <h3>Billing Address</h3>
  <input name="shipping[street]" placeholder="Street Name" required />
  <input name="shipping[city]" placeholder="City" required />
  <input name="shipping[state]" placeholder="State" required />
  <input name="shipping[zip]" placeholder="Zip Code" required />

  <h3>Installation Address</h3>
  
  Same as Billing Address?
  <input type="checkbox" name="sameAs" value="true" />

  <br>
  <input name="billing[street]" placeholder="Street Name"  required />
  <input name="billing[city]" placeholder="City" required />
  <input name="billing[state]" placeholder="State" required />
  <input name="billing[zip]" placeholder="Zip Code" required />

  <br><br>

  <input type="submit" name="submit" value="Submit"/>

<% end %>